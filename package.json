{
  "name": "ovenjs",
  "version": "0.1.0",
  "description": "A modern Discord API wrapper for Node.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "dev": "yarn workspaces run dev",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "test": "jest",
    "clean": "yarn workspaces run clean"
  },
  "dependencies": {
    "discord-api-types": "^0.37.83"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "discord",
    "api",
    "wrapper",
    "bot",
    "typescript"
  ],
  "author": "OvenJS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ovenjs/oven.git"
  }
}
